<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Gray.Button" parent="Base.Button">
        <item name="android:onClick">onOperationClick</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Orange.Button" parent="Base.Button">
        <item name="android:onClick">onOperationClick</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Dark.Button" parent="Base.Button">
        <item name="android:onClick">onNumberClick</item>
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Policy.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/asphalt_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="icon">@drawable/ic_arrow_right</item>
        <item name="iconGravity">end</item>
        <item name="iconSize">30dp</item>
        <item name="iconTint">@color/asphalt_gray</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>